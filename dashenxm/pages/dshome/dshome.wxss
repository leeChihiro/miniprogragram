@import "../dsknowledges/knowledges/knowledges-template.wxss";
page{
  background: #ededed;
  font-size: 26rpx;
  width: 750rpx;
}
.home{
  display: flex;
  flex-direction: column;
  align-items: center;
}
swiper{
  width:750rpx;
  height:400rpx;
}
swiper image{
  width:100%;
  height:400rpx;
}
.news-container{
  width:700rpx;
  margin-bottom: 50rpx;
}
.news-search{
  width:700rpx;
  height:100rpx;
  margin-top:20rpx;
  border:1px solid #ffffff;
  border-radius: 5px;
  background: #ffffff;
  text-align: center;
  line-height: 100rpx;
  color:#999999;
  font-size: 32rpx;
}
.news-search-img{
  margin-right:30rpx;
  vertical-align: middle;
  width:44rpx;
  height:43rpx;
}
.news-product{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-around;
  width: 700rpx;
  height:220rpx;
  margin-top: 20rpx;
  border:1px solid #ffffff;
  border-radius: 5px;
  background: #ffffff;
}
.news-product-1{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
  color:#2d495e;
  margin-left: 50rpx;
}
.news-product-1-img{
  width: 100rpx;
  height:85rpx;
}
.news-product-2{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
  color:#2d495e;
  margin-right: 50rpx;
}
.news-product-2-img{
  width: 100rpx;
  height:85rpx;
}
.news-all{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 700rpx;
  height:100rpx;
  margin-top:20rpx;
  border: 1px solid #ffffff;
  border-radius: 5px;
  background: #ffffff;
  line-height: 100rpx;
}
.news-all-img{
  width:148rpx;
  height: 31rpx;
  margin-left: 25rpx;
  line-height: 100rpx;
}
.news-all-more{
height: 100rpx;
line-height: 100rpx;
color: #7ed3d0;
margin-right:25rpx;
}
.news-all-more-img{
margin-left: 10rpx;
width: 12rpx;
height:22rpx;
}
.news{
  margin-top:20rpx;
  border:1px solid #ffffff;
  border-radius: 5px;
  background: #ffffff;
  padding:20rpx; 
}

.SeeWhole{
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top:20rpx;
  font-size: 30rpx;
  color:#7dd1d3;
}

