/* pages/dsproduct-details/dsproduct-details.wxss */

page {
  background: #ededed;
  font-size: 32rpx;
  color: #333;
}

swiper {
  width: 750rpx;
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 400rpx;
}

.product-details-name {
  width: 750rpx;
  height: 180rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.product-details-name-t {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.product-details-name-b {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.product-details-name-b-1 {
  color: #ff6766;
  font-size: 36rpx;
}

.product-details-name-b-2 {
  color: #999;
  font-size: 32rpx;
}

.product-details-specification {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
  background: #fff;
}

.product-details-specification text {
  color: #999;
  margin-left: 20rpx;
}

.product-details-specification image {
  width: 22rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.product-details-details {
  width: 750rpx;
  background: #fff;
  margin-top: 20rpx;
}

.product-details-details-1 {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 25rpx;
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.product-details-details-2 {
  color: #999;
  margin-left: 25rpx;
  width: 700rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.product-details-details-3 {
  color: #999;
  margin-left: 25rpx;
  width: 700rpx;
  margin-top: 20rpx;
}

.product-details-img {
  width: 100%;
  height: 100%;
  background: #fff;
  text-align: center;
}

.product-details-bottom {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background: #ff6766;
  font-weight: bold;
  font-size: 36rpx;
}
