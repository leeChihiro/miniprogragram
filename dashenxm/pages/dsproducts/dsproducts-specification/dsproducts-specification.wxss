@import "../product-model-list/product-model-list-template";

.product-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 100rpx;
}

.product-top-left {
  margin-left: 25rpx;
}

.product-top-left image {
  width: 200rpx;
  height: 200rpx;
}

.product-top-right {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 15rpx;
}

.product-top-right-top image {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}

.product-top-right-top-bottom {
  display: flex;
  flex-direction: column;
}

.product-top-right-top-bottom-1 {
  color: #ff6668;
}

.product-top-right-top-bottom-2 {
  font-size: 32rpx;
  color: #b6b6b6;
}

radio-group {
  padding: 0 20rpx;
}

.number {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 50rpx 20rpx 100rpx 20rpx;
  color: #444;
}

.number-number {
  margin: 50rpx 10rpx;
}

.specification-bottom button {
  position: fixed;
  left: 0rpx;
  bottom: 25rpx;
  background: #ff6766;
  width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  overflow: hidden;
  margin-left: 25rpx;
}

.productType {
  display: flex;
  flex-direction: column;
}

.productTypeText {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.productNorm {
  display: flex;
  flex-direction: column;
}

.productNormText {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.TypeRadio {
  display: flex;
  flex-direction: row;
  margin: 50rpx 20rpx;
  color: #333;
  flex-wrap: wrap;
}

.chose-txt {
  border-radius: 20px;
  font-size: 26rpx;
  height: 80rpx;
  width: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 33rpx;
  margin-top: 20rpx;
}


.chose-p {
  line-height: 80rpx;
  width: 100%;
  height: 50rpx;
  text-align: center;
}

/* 加减号 */

/*主容器*/

.Number {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  color: #333;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.stepper {
  width: 100px;
  height: 30px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 15px;
  margin-right: 35rpx;
}

/*加号和减号*/

.stepper text {
  width: 24px;
  line-height: 30px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 50px;
  height: 30px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}
