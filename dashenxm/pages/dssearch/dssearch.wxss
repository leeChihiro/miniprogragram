@import "article-template/article-template.wxss";
@import "product-template/product-template.wxss";
@import "test-template/test-template.wxss";

.search{
  width: 750rpx;
}
.search-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}
.search-top-l{
  margin-left: 20rpx;
  width: 550rpx;
  height: 70rpx;
  background: #eeeeee;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.search-top-l input{
  height: 70rpx;
  line-height: 70rpx;
  color: #666666;
  margin-left: 50rpx;
  font-size: 30rpx;
}
.search-top-r{
  margin-right: 20rpx;
}
.search-top-r image{
  width: 140rpx;
  height: 70rpx;
}
.search-hot{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  margin-top: 50rpx;
}
.search-hot-l{
margin-left: 50rpx;
color: #666666;
}

.search-hot-r{
margin-right: 50rpx;
color: #fc6868;
}