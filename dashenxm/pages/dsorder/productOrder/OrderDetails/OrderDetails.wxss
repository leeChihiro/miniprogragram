
.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.container-title {
  margin: 25rpx 25rpx 0 25rpx;
  text-align: center;
  font-weight: bolder;
  color: #333;
}

.container-img {
  margin: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-img image {
  width: 700rpx;
}

.container-details {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  margin-bottom: 30rpx;
}

.container-details text {
  margin: 10rpx 10rpx 10rpx 10rpx;
  color: #666;
  font-weight: bolder;
}
