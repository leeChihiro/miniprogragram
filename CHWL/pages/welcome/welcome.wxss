/**index.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f6f6f6;
}

page {
  height: 100%;
  background-color: #f6f6f6;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 300px;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 260rpx;
  border-radius: 100rpx;
}

.motto {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.journey-container {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 45rpx;
  text-align: center;
}

.journey {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
