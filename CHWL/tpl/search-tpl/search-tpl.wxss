.search{
  display: flex;
  align-items: center;
  height: 88rpx;
  padding-left: 8rpx;
  padding-right: 20rpx;
  background-color: #fff;
}
.search image{
  width: 76rpx;
  height: 70rpx;
}
.search text{
  flex: 1;
  padding-left: 6rpx;
  padding-right: 46rpx;
  font-size: 32rpx;
  white-space: nowrap;
}
.ipt-box{
  display: flex;
  align-items: center;
  width: 470rpx;
  height: 60rpx;
  padding: 0 36rpx;
  border-radius: 30rpx;
  background-color: #eee;
}
.ipt-box input{
  flex: 1;
  padding: 0 13rpx;
  font-size: 26rpx;
  color: #666;
}